<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/blue_background"
    tools:context=".fragment.IntroFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizza_pro"
                android:textColor="@color/purple"
                android:textSize="75sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="310dp"
                android:layout_height="290dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/logo"
                android:scaleType="fitXY"
                app:srcCompat="@raw/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/hot_fresh_and_always_on_time"
                android:textColor="@color/purple"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btn_start"
                android:layout_width="225dp"
                android:layout_height="75dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/white_rectangle"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/tv_lets_get_started"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/lets_get_started"
                    android:textColor="@color/blue"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>