<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pizza_Pro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ThemeOverLay.Pizza_Pro.PopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:colorForeground">@color/slate</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.Pizza_Pro.CurrentFragment">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:background">@color/silver</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.Pizza_Pro.NextFragment">
        <item name="android:textColor">@color/slate</item>
        <item name="android:drawableTint">@color/slate</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.Pizza_Pro.SwitchCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="thumbTint">@color/sea</item>
        <item name="trackTint">@color/teal</item>
    </style>
</resources>